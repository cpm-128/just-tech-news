{{!-- POST DATA --}}

<article class="post">

    <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>
    </div>

    <div class="meta">
        {{post.vote_count}} point(s) by {{post.user.username}} on {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>

</article>

{{!-- LEAVE A COMMENT --}}
{{!-- the loggedIn variable comes from home-routes.js --}}
{{#if loggedIn}}
<form class="comment-form">

    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add comment</button>
        <button type="button" class="upvote-btn">Upvote</button>
    </div>

</form>
{{/if}}

{{!-- DISPLAY COMMENTS --}}
<div class="comments">

    {{!-- user the #each helper to iterate over the comments array --}}
    {{#each post.comments }}
    <section class="comment">

        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>

        <div class="text">
            {{comment_text}}
        </div>

    </section>
    {{/each}}

</div>

{{!-- static scripts to add functionality to comment box and upvoting --}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>