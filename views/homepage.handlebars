<ol class="post-list">
    {{!-- loop over the posts array in homepage-routes.js --}}
    {{#each posts}}
    <li>
        <article class="post">

            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>({{post_url}})</span>
            </div>

            <div class="meta">
                {{vote_count}} point(s) by {{user.username}} on {{created_at}}
                |
                <a href="/post/{{id}}">{{connemts.length}} comment(s)</a>
            </div>

        </article>
    </li>
    {{/each}}
</ol>